{
    "name": "RR Adblocker",
    "version": "0.1.3",
    "description": "Rutuj Runwal's Adblocker blocks ads and trackers to make your web surfing faster and safer.",
    "permissions": ["tabs","activeTab","declarativeNetRequest","declarativeNetRequestFeedback" , "storage"],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "blockLIST",
          "enabled": true,
          "path": "my.json"
        }
      ]
    },
    "icons": { "48": "./icons/ad48.png", "64": "./icons/ad64.png" },
    "content_scripts": [
      { 
        "js": ["yt_blocks.js","content.js"],
        "run_at": "document_idle",
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
        "default_popup": "Popup.html",
        "default_title": "RR Adblocker"
    },
    "manifest_version": 3
}